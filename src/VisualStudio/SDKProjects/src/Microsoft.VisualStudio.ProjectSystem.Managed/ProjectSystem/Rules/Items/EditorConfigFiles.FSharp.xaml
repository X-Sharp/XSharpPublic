<Rule Name="EditorConfigFiles"
      PageTemplate="generic"
      PropertyPagesHidden="true"
      OverrideMode="Extend"
      xmlns="http://schemas.microsoft.com/build/2009/properties">

  <!--
  This is an F#-specific override of the default EditorConfigFiles rule to add the
  FullPath property which is required by TreeItemOrderPropertyProvider.
  -->

  <StringProperty Name="FullPath"
                  ReadOnly="true"
                  Visible="false">
    <StringProperty.DataSource>
      <DataSource ItemType="EditorConfigFiles"
                  PersistedName="FullPath"
                  Persistence="Intrinsic"
                  SourceOfDefaultValue="AfterContext" />
    </StringProperty.DataSource>
  </StringProperty>

</Rule>
