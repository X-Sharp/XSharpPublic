  <title>APPEND BLANK Command</title>
  <keywords>
    <keyword>Adding<keyword>records</keyword></keyword>
    <keyword>APPEND BLANK command</keyword>
    <keyword>Commands</keyword>
    <keyword>Databases</keyword>
